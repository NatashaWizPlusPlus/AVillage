<div class="container">

{{!-- Needs Dynamic population of title, description and items, as well as letting users add items --}}
{{!--Need to fix main layout links for this page, as login, filter and add event become unresponsive on this page --}}
    <div class="col s12 m6">
     
        <h1>{{this.title}}</h1>
        {{!--<img src="../images/sample-1.jpg">--}}
        <p>{{this.description}}</p>
      
        
        <form action="/api/items" method="POST">
            <div class="row">
                <div class="input-field col s12">
                    <input id="title" type="text" class="text" name="title" >
                    <label for="title">Item</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="description" type="text" class="text" name="description" >
                    <label for="description">Description</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="quantity" type="number" class="text" name="quantity" >
                    <label for="quantity">Quantity</label>
                </div>
            </div>
            <div id="EventId">
                    <input type= "number" class="form-control" name="EventId" value="{{this.id}}" id="quantity">
            </div>
            <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
		</form>

        <div id="neededItems">
            <div class="row">
                {{#each Items}}
                <div class="col-xs-9 text-center">
                    <pre>{{this.title}}. {{this.description}}
                    </pre>
                        <!-- {{this.Date}} -->
                </div>
                <form method="POST" action="/items/update?_method=PUT" class="button-size">
                    <input type="hidden" type="text" name="id" value={{this.id}}><br>
                    <button type="submit" class="btn btn-default">Donate!</button>
                </form>
                {{/each}}
            </div>    
        </div>
    </div>
</div>